<h1><%= @review_presenter.poem_name %></h1>
<h2><%= @review_presenter.canto_name %></h2>
<h3><%= @review_presenter.stanza_number %></h3>
<ul class='lines'>
<% @review_presenter.lines.each do |line| %>
  <li class='line'>
    <% line.words.each do |word| %>
      <%=  element_for(word) %>
    <% end %>
  </li>
<% end %>
</ul>
<%= link_to_if(@review_presenter.back_button.condition, @review_presenter.back_button.name, lines_review_url(@review_presenter.back_button.options)) %>
<%= link_to_if(@review_presenter.next_button.condition, @review_presenter.next_button.name, lines_review_url(@review_presenter.next_button.options)) %>
