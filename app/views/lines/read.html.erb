<section class="hero" id='poem-info'>
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%= @read_facade.poem_name %>
      </h1>
      <h2 class="subtitle">
        <%= @read_facade.canto_name %>
      </h2>
    </div>
  </div>
</section>
<section class='level-item' id='poem-review'>
  <div class="card">
    <header class="card-header">
      <p class="card-header-title">
        <%= @read_facade.stanza_number %>
      </p>
      <a href="#" class="card-header-icon" aria-label="more options">
        <span class="icon">
          <i class="fas fa-angle-down" aria-hidden="true"></i>
        </span>
      </a>
    </header>
    <div class="card-content">
      <div class="content">
        <ul class='lines'>
          <%= @read_facade.present_lines %>
        </ul>
      </div>
    </div>
    <footer class="card-footer">
      <%= link_to(@read_facade.reset_button.name, lines_read_url(@read_facade.reset_button.options), class: 'card-footer-item') if @read_facade.reset_button.condition? %>
      <%= link_to(@read_facade.back_button.name, lines_read_url(@read_facade.back_button.options), class: 'card-footer-item') if @read_facade.back_button.condition? %>
      <%= link_to(@read_facade.next_button.name, lines_read_url(@read_facade.next_button.options), class: 'card-footer-item', id: @read_facade.next_button.id) if @read_facade.next_button.condition? %>
      <%= link_to(@read_facade.done_button.name, lines_test_url(@read_facade.done_button.options), class: 'card-footer-item') if @read_facade.done_button.condition? %>
    </footer>
  </div>
</section>
<section class="section" id='hints'>
    <div class="container level">
      <p class='level-item'>Hint: Pressing the <code>SPACEBAR</code> is a faster way to move <code>Next</code>.</p>
    </div>
  </section>
<script>
  (function () {
    document.body.onkeyup = function(event){
      var spacebar = 32;
      if (event.keyCode == spacebar) {
        event.preventDefault();
        moveToNextIteration();
      }
    }
  })();
</script>
